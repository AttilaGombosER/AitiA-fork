#!/bin/bash
#reset watchdog
i2cset -y 1 0x6b 0x16 0xa7

# get status
echo "Status (normal = 0x00)"
i2cget -y 1 0x6b 0x1d
i2cget -y 1 0x6b 0x1d

echo ""

#i2cset -y 1 0x6b 0x18 0x0c
i2cget -y 1 0x6b 0x18

if [[ "$1" != "shut" ]]
then
echo "ship"
#i2cset -y 1 0x6b 0x18 0x0e
i2cset -y 1 0x6b 0x18 0x06
else
echo "shut"
#i2cset -y 1 0x6b 0x18 0x0d
i2cset -y 1 0x6b 0x18 0x05
fi
echo ""
i2cget -y 1 0x6b 0x18

halt
